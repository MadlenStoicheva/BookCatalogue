<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:isScrollContainer="true"
                android:scrollbars="vertical"
                android:stretchColumns="0">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20sp"
                        android:layout_span="2"
                        android:textColor="#cc282b"
                        android:textFontWeight="35dp"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="cursive"
                        android:text="Favorite Books"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageVBook1"
                        android:layout_width="100dp"
                        android:layout_height="330dp"
                        android:layout_margin="15sp"
                        tools:srcCompat="@tools:sample/avatars" />

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textColor="#cc282b"
                        android:textSize="16sp"
                        android:text="The Hunger Games"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author: Suzanne Collins"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genre: Adventure"
                        android:textAlignment="center" />
                </TableRow>
                <Button
                    android:id="@+id/buttonReadHome"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="9dp"
                    android:background="@drawable/shape"
                    android:text="Read"
                    android:textColor="#ffffff"
                    android:textFontWeight="bold">
                </Button>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginTop="20sp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageVBook2"
                        android:layout_width="100dp"
                        android:layout_height="330dp"
                        android:layout_margin="15sp"
                        tools:srcCompat="@tools:sample/avatars" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textColor="#cc282b"
                        android:textSize="16sp"
                        android:text="The Fault in Our Stars"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author: John Green"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genre: Romance"
                        android:textAlignment="center" />
                </TableRow>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="9dp"
                    android:background="@drawable/shape"
                    android:text="Read"
                    android:textColor="#ffffff"
                    android:textFontWeight="bold">
                </Button>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginTop="20sp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageVBook3"
                        android:layout_width="100dp"
                        android:layout_height="330dp"
                        android:layout_margin="15sp"
                        tools:srcCompat="@tools:sample/avatars" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textColor="#cc282b"
                        android:textSize="16sp"
                        android:text="The Secret"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author: Rhonda Byrne"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genre: Self-help"
                        android:textAlignment="center" />
                </TableRow>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="9dp"
                    android:background="@drawable/shape"
                    android:text="Read"
                    android:textColor="#ffffff"
                    android:textFontWeight="bold">
                </Button>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginTop="20sp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageVBook4"
                        android:layout_width="100dp"
                        android:layout_height="330dp"
                        android:layout_margin="15sp"
                        tools:srcCompat="@tools:sample/avatars" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:textColor="#cc282b"
                        android:textSize="16sp"
                        android:text="Rich Dad Poor Dad"
                        android:textAlignment="center" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author: Robert Kiyosaki, Sharon L. Lechter"
                        android:textAlignment="center" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genre: Business"
                        android:textAlignment="center" />
                </TableRow>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="9dp"
                    android:background="@drawable/shape"
                    android:text="Read"
                    android:textColor="#ffffff"
                    android:textFontWeight="bold">
                </Button>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_margin="20dp"
                    android:textAlignment="center"
                    android:text="Developer: Madlen Stoycheva">

                </TextView>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>