<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".BooksInGenreActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Genre: Business"
                android:textAlignment="center"
                android:textColor="#cc282b"
                android:textFontWeight="35dp"
                android:textSize="50sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />

            <TableLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:stretchColumns="0,1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#a40404" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB1"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Rich Dad Poor Dad"
                            android:textColor="#cc282b"
                            android:textFontWeight="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: Robert Kiyosaki, Sharon L. Lechter"
                            android:width="170dp"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre: Business" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pages: 207" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="20sp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <Button
                                android:id="@+id/buttonGet0"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Get"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                            <Button
                                android:id="@+id/buttonRead0"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Read"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#a40404" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB2"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Think and Grow Rich"
                            android:textColor="#cc282b"
                            android:textFontWeight="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: Napoleon Hill"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre: Business, Self-Help" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pages: 235" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="20sp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <Button
                                android:id="@+id/buttonGet1"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Get"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                            <Button
                                android:id="@+id/buttonReadB"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Read"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1sp"
                    android:layout_gravity="center"
                    android:background="#a40404" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB3"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="The Psychology of Selling"
                            android:textColor="#cc282b"
                            android:textFontWeight="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: Brian Tracy"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre: Business" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pages: 240" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="20sp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <Button
                                android:id="@+id/buttonGet2"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Get"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                            <Button
                                android:id="@+id/buttonRead1"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Read"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1sp"
                    android:layout_gravity="center"
                    android:background="#a40404" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB4"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Talent Is Never Enough"
                            android:textColor="#cc282b"
                            android:textFontWeight="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: John C. Maxwell"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre: Business" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pages: 283" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="20sp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <Button
                                android:id="@+id/buttonGet4"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Get"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                            <Button
                                android:id="@+id/buttonRead3"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Read"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1sp"
                    android:layout_gravity="center"
                    android:background="#a40404" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB5"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="The 7 Habits of Highly Effective People"
                            android:textColor="#cc282b"
                            android:textFontWeight="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: Stephen R. Covey"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre: Business" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pages: 384" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="20sp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <Button
                                android:id="@+id/buttonGet5"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Get"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                            <Button
                                android:id="@+id/buttonRead4"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_margin="9dp"
                                android:background="@drawable/shape"
                                android:text="Read"
                                android:textColor="#ffffff"
                                android:textFontWeight="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1sp"
                    android:layout_gravity="center"
                    android:background="#a40404" />
            </TableLayout>

            <Button
                android:id="@+id/buttonAllGenres"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/shape"
                android:text="See All Genres"
                android:textColor="#ffffff"
                android:textFontWeight="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>